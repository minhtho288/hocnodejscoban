extends ../layouts/common.pug
block content
    h1 Create user
    if errors
        each error in errors
            .alert.alert-danger=error
    form(action="/banh/create", method="post", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=values ? values.name:"")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value=values ? values.phone:"")
        .form-group
            label(for="avatar") Avatar
            br
            input#avatar.form-control-file(name="avatar", type="file")    
            br
            button.btn.btn-primary Create